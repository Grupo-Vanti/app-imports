{
  // Disable VSCode built-in `formatOnSave` only for JavaScript and TypeScript files
  // in order to make `standard.autoFixOnSave` working
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "json.format.enable": true,
  // Be sure prettier is off so it won't conflict with Standard
  "prettier.enable": false,
  "eslint.format.enable": false,
  // StandardJS VSCode extention settings
  "standard.engine": "ts-standard",
  "standard.enableGlobally": true,
  "standard.autoFixOnSave": true,
  "standard.run": "onType",
  "standard.usePackageJson": true,
  "files.associations": {
    "*.css": "tailwindcss", // enforce usage of Tailwind extention to lint css files
    "*.json": "jsonc"
  }
}